<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8d8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.br.papoinbar.CadastroAperitivoActivity" >

     <EditText
         android:id="@+id/nomeAperitivo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="17dp"
         android:ems="10"
         android:hint="Nome Aperitivo" />

     <EditText
         android:id="@+id/valorAperitivo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/nomeAperitivo"
         android:layout_below="@+id/nomeAperitivo"
         android:layout_marginTop="20dp"
         android:ems="10"
         android:hint="Digite O Valor"
         android:inputType="numberDecimal" >

         <requestFocus />
     </EditText>

     <Button
         android:id="@+id/salvarAperitivo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/valorAperitivo"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="36dp"
         android:text="Salvar" />

</RelativeLayout>
