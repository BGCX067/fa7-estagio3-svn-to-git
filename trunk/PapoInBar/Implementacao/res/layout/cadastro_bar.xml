<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:background="#f8f8d8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Cadastro de Bar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ViewnomeBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="Nome"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/nomeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ViewnomeBar"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/ViewenderecoBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nomeBar"
        android:text="Endereço:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/barDescricao"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_above="@+id/btnSalvarBar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/barDescricao"
        android:layout_alignBottom="@+id/barDescricao"
        android:layout_alignParentLeft="true"
        android:text="Descrição"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barDescricao"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="19dp"
        android:text="Tipo de Bar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/enderecoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ViewenderecoBar"
        android:layout_marginTop="24dp"
        android:ems="10" />

    <Button
        android:id="@+id/btnSalvarBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/barDescricao"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:text="Salvar Bar" />

</RelativeLayout>