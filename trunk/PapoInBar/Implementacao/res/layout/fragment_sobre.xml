<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8d8"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logopapo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:text="Aplicativo Desenvolvido por"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f5b951" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="André Ravagnani"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f5b951" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="João Paulo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f5b951" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thiago César"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f5b951" />
    <RelativeLayout     
        android:background="#f8f8d8"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >>
    	
    	<TextView
    	    android:id="@+id/textView5"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentLeft="true"
    	    android:gravity="center"
    	    android:text="Estágio 3 - 2014.2"
    	    android:textAppearance="?android:attr/textAppearanceLarge"
    	    android:textColor="#f5b951" />

    </RelativeLayout>
    
</LinearLayout>
