<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.fa7.fightingbet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.edu.fa7.fightingbet.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.edu.fa7.fightingbet.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="br.edu.fa7.fightingbet.NoticiaListActivity"
            android:label="@string/title_noticia_list" >
        </activity>
        <activity
            android:name="br.edu.fa7.fightingbet.activity.NoticiasActivity"
            android:label="@string/title_activity_noticias" >
        </activity>
        <activity
            android:name="br.edu.fa7.fightingbet.activity.ResultadosActivity"
            android:label="@string/title_activity_resultados" >
        </activity>
        <activity
            android:name="br.edu.fa7.fightingbet.activity.ApostasActivity"
            android:label="@string/title_activity_apostas" >
        </activity>
        <activity
            android:name="br.edu.fa7.fightingbet.activity.RankingActivity"
            android:label="@string/title_activity_ranking" >
        </activity>
        <activity
            android:name="br.edu.fa7.fightingbet.activity.NoticiaDetailActivity"
            android:label="@string/title_activity_noticia_detail" >
        </activity>
    </application>

</manifest>
