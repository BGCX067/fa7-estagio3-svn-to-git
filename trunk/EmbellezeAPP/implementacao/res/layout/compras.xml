<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.example.vendasembelleze.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TELA DE COMPRAS" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTA DOS CURSOS" />
    
    <CheckBox 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cabeleireiro Profissional | R$ 4000" 
        android:id="@+id/cbCabeleireiro_Profissional"/>
    
       <CheckBox 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Barbeiro R$ 3000" 
        android:id="@+id/cbBarbeiro_Profissional"/>
       
       <CheckBox 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Depilação Profissional | R$ 2000" 
        android:id="@+id/cbDepilacao_Profissional"/>
       
       <CheckBox 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ManicurePedicure | R$ 2000" 
        android:id="@+id/cbManicure_Pedicure"/>
      
        <CheckBox 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Maquiador Profissional | R$ 2000" 
        android:id="@+id/cbMaquiador_Profissional"/>
        
        <Button 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar a compra" 
        android:id="@+id/btFinalizar"/>
        
          <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Valor total da compra" />
          
          <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etValorTotal" />

    <Button
        android:id="@+id/btVoltarMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volta Menu" />

</LinearLayout>